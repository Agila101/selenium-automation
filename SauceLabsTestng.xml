<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceLabsSuite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="com.automationframework.Listeners.TestListener"/>
    </listeners>

    <!-- Firefox on Sauce Labs -->
    <test name="SauceLabsFirefox">
        <parameter name="mode" value="saucelabs"/>
        <parameter name="browser" value="firefox"/>
        <parameter name="platform" value="Windows 11"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="com.automationframework.tests.LoginTest"/>
            <class name="com.automationframework.tests.ProductPageTest"/>
        </classes>
    </test>

    <!-- Edge on Sauce Labs
    <test name="SauceLabsEdge">
        <parameter name="mode" value="saucelabs"/>
        <parameter name="browser" value="edge"/>
        <parameter name="platform" value="Windows 11"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="com.automationframework.tests.LoginTest"/>
            <class name="com.automationframework.tests.ProductPageTest"/>
        </classes>
    </test>
  -->
</suite>
