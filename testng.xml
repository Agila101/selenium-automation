<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="ParallelSuite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="com.automationframework.Listeners.TestListener"/>
    </listeners>

    <!-- Firefox Tests -->
    <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
        <parameter name="env" value="qa"/>
        <classes>
            <class name="com.automationframework.tests.LoginTest"/>
            <class name="com.automationframework.tests.ProductPageTest"/>
        </classes>
    </test>

    <!-- Chrome Tests -->
    <test name="ChromeTests">
        <parameter name="browser" value="chrome"/>
        <parameter name="env" value="qa"/>
        <classes>
            <class name="com.automationframework.tests.LoginTest"/>
            <class name="com.automationframework.tests.ProductPageTest"/>
        </classes>
    </test>
    <test name="EdgeTests">
        <parameter name="browser" value="edge"/>
        <parameter name="env" value="qa"/>
        <classes>
            <class name="com.automationframework.tests.LoginTest"/>
            <class name="com.automationframework.tests.ProductPageTest"/>
        </classes>
    </test>
</suite>